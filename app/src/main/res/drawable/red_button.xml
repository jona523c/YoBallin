<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape>
                    <corners android:radius="1dp" />
                    <solid android:color="@color/black" />
                    <padding
                        android:bottom="1dp"
                        android:left="1dp"
                        android:right="1dp"
                        android:top="1dp" />
                </shape>
            </item>
            <item
                android:bottom="5dp"
                android:right="5dp">
                <shape>
                    <corners android:radius="3dp" />
                    <gradient
                        android:angle="315"
                        android:endColor="@color/dark_grey"
                        android:startColor="@color/red"
                        android:type="radial"
                        android:centerX="0.55"
                        android:centerY="0"
                        android:gradientRadius="300"/>
                    <padding
                        android:bottom="2dp"
                        android:left="0dp"
                        android:right="2dp"
                        android:top="0dp" />
                </shape>
            </item>
            <item>
                <shape>
                    <corners android:radius="1dp" />
                    <solid android:color="@color/red" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
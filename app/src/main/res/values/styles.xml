<resources>
    <style name="BallinTheme" parent="Theme.AppCompat.NoActionBar" >
        <item name="colorPrimary">@color/light_brown</item>
        <item name="android:colorBackground">@color/sand</item>
        <item name="android:navigationBarColor">@color/light_brown</item>
        <item name="android:statusBarColor">@color/light_brown</item>
    </style>
    <style name="settings_text">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="buttons_text">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>
</resources>
